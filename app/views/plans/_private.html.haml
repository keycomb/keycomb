.plan
  - if plan.allowance > 100
    %h5.plan-title
      %strong Unlimited
      Repos?
    .plan-allowance
      Contact #{mail_to "support@keycomb.io", 'support'}.
    .plan-price &nbsp;
  - else
    %h5.plan-title= plan.title
    .plan-allowance
      = t(".allowance_html", allowance: plan.allowance)
    .plan-price= t(".price_html", price: plan.price)
